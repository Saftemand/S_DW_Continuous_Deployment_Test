
<div class="slice">
	<div class="form-body">
		@GetValue("Form.Start")
		@GetValue("Form.Hidden")
		<div class="row">
			@foreach (LoopItem i in GetLoop("Form.Fields")){
				
				var colmd = 6;
				
				if (i.GetString("Field.Type") == "Textarea") {
					colmd = 12;
				} 

				<div class="col-lg-12 col-md-@colmd col-sm-12 col-xs-12">
					<div class="form-group">
						<label for="@i.GetValue("Field.Systemname")">@i.GetValue("Field.Label")</label>
						@i.GetString("Field.Control").Replace(" id", " class=\"form-control\" id")
						@i.GetValue("Field.Description")
					</div>
				</div>
			}
		</div>
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				 <input class="btn btn-dw-primary pull-right" type="submit"/>                      
			</div>
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<p>&nbsp;</p>
			</div>
		</div>
		@GetValue("Form.End")
	</div>
</div>
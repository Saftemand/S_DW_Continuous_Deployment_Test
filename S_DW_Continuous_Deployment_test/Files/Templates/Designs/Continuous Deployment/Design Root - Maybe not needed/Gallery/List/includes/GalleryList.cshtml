
@Include("../../../_wrap/WrapMethods.cshtml")


@helper GetImageList(dynamic Loop, int Col=3, bool Spaces=true)
{
	int Count = 0;

	string  Columns = WrapMethods.ColumnMaker(Col, "md");

	string imageclass = "";
	string gallerycss = "gallery-space";
	
	if (Spaces == false)
	{
		imageclass = "content-image";
		gallerycss = "gallery-no-space"; 
	}

	foreach (LoopItem imagebox in Loop){
		var image = @imagebox.GetValue("Gallery.Image.Path");
		var imageLink = @imagebox.GetValue("Gallery.Image.Path");
		
		<div class="@gallerycss @Columns col-sm-6 col-xs-12" data-cat="1">
			<a href="@imageLink" class="mt-10 fancybox">
				<img alt="" src="/Admin/Public/GetImage.ashx?image=@image&amp;width=320&amp;height=200&amp;compression=90&amp;crop=0" class="img-responsive @imageclass">
			</a>
		</div>
	
		Count++;

		if (Count == Col)
		{
			<div class="row"></div>
			Count = 0;
		}
	}
}
	